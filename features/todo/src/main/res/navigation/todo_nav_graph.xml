<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todo_nav_graph"
    app:startDestination="@id/todoListFragment">

    <action
        android:id="@id/action_addTodo"
        app:destination="@id/todoAddFragment">
        <argument
            android:name="id"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </action>

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.thiagoyf.todo.list.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list" />

    <fragment
        android:id="@+id/todoAddFragment"
        android:name="com.thiagoyf.todo.add.TodoAddFragment"
        android:label="TodoAddFragment" />

</navigation>